<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <LinearLayout android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/header_gradient"
            android:paddingTop="5dip"
            android:paddingBottom="5dip">
            <!-- Logo Start-->
            <ImageView android:src="@drawable/logonew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"/>
            <!-- Logo Ends -->
        </LinearLayout>
        <!--  Header Ends -->

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_alignParentBottom="true"
            android:background="@layout/footer_repeat"
            android:orientation="vertical" >
        </LinearLayout>
        <!-- Footer Ends -->


        <!-- Login Form -->
        <LinearLayout
            android:id="@+id/welcomeMessage"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:orientation="vertical"
            android:layout_below="@+id/header"
            >

            <TextView
                android:id="@+id/welcome"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="15dp"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="#254117" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="43dp"
                android:src="@drawable/gen" />

        </LinearLayout>



        <RelativeLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/welcomeMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/firstNameText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/firName"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextFirstname"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/firstNameText" />

            <!-- Password Label -->



            <!-- Link to Registration Screen -->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/middleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/firstLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/middleNameText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/midName"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextMiddlename"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/middleNameText" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lastLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/middleLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/lastNameText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/lastName"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/Textlastname"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/lastNameText" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dobLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/lastLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/dobText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/dob"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/Textdob"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/dobText" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/genderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/dobLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/genderText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/gend"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/Textgender"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/genderText" />


        </RelativeLayout>


        <!-- Login Form Ends -->

        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/genderLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/tel"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/Textphone"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/phoneText" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/phoneLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/emailText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/Textemail"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/emailText" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homeAddLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/emailLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/homeAddress"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/homeAdd"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextHome"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:lines="2"

                android:inputType="textMultiLine"
                android:layout_toRightOf="@+id/homeAddress" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contactAddLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/homeAddLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/contactAddText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/contactAdd"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextContactAdd"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:lines="2"
                android:inputType="textMultiLine"
                android:layout_toRightOf="@+id/contactAddText" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/maritalStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/contactAddLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/maritalText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/marital"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextMarital"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:layout_toRightOf="@+id/maritalText" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noChildrenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/maritalStatusLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/nochildrenText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/noChildren"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextNoChildren"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:layout_toRightOf="@+id/nochildrenText" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/schoolStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/disabilityLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/schoolStatusText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/schoolStatus"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextSchholStatus"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:layout_toRightOf="@+id/schoolStatusText" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/disabilityLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/noChildrenLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/disabilityText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="@string/disability"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/TextDisabillity"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:layout_toRightOf="@+id/disabilityText" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="5dip"
            android:layout_below="@+id/schoolStatusLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Email Label -->

            <TextView
                android:id="@+id/imageText"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="Image URL"
                android:textColor="#372c24"/>

            <TextView
                android:id="@+id/Textimagetext"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:background="@layout/rounded_edittext"
                android:singleLine="true"
                android:layout_toRightOf="@+id/imageText" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/schoolStatusLayout">
            <Button
                android:id="@+id/btnBack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"

                android:text="Back" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>